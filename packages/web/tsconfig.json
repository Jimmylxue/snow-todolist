{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/types/*":["./src/types/*"],
      "@/utils/*":["./src/utils/*"],
      "@/hooks/*":["./src/hooks/*"],
      "@/stores/*":["./src/stores/*"],
      "@/core/*":["./src/core/*"],
      "@/components/*":["./src/components/*"],
      "@/config/*":["./src/config/*"],
      "@/api/*":["./src/api/*"],
      "@/pages/*":["./src/pages/*"],
      "@/assets/*":["./src/assets/*"],
    }, 
  },
  "include": ["src", "src/hooks/.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
